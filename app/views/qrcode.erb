<% 
require 'rqrcode' 

qr = RQRCode::QRCode.new gamecode
%>

<html>
<head>
<title>Share game <%= gamecode %></title>
<style type="text/css" media="screen">
 table {
  border-width: 0;
  border-style: none;
  border-color: #0000ff;
  border-collapse: collapse;
 }
 td {
   border-width: 0;
   border-style: none;
   border-color: #0000ff;
   border-collapse: collapse;
   padding: 0;
   margin: 0;
   width: 10px;
   height: 10px;
 }
 td.black { background-color: #000; }
 td.white { background-color: #fff; }
</style>
</head>
<body>
  <table width="" cellspacing="" cellpadding="" border="">
    <% qr.modules.each_index do |x| %>
    <tr>
      <% qr.modules.each_index do |y| %>
      <% if qr.dark? x,y %>
      <td class="black"/>
      <% else %>
      <td class="white"/>
      <% end %>
      <% end %>
    </tr>
    <% end %>
  </table>
</body>
